<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.drawtests"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/horse"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
         <activity
            android:name="com.example.drawtests.MainScreenActivity"
            android:noHistory="true"
            android:screenOrientation="landscape"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.drawtests.MainActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="landscape" >
            
        </activity>
       
        <activity
            android:name="com.example.drawtests.CustomizeActivity"
            android:noHistory="true"
            android:screenOrientation="landscape"
            android:label="@string/app_name" 
            android:parentActivityName="com.example.drawtests.MainScreenActivity">
        </activity>
        
        <activity
            android:name="com.example.drawtests.HelpDialogActivity"
            android:noHistory="true"
            android:screenOrientation="landscape"
            android:label="@string/app_name" 
            android:parentActivityName="com.example.drawtests.MainScreenActivity">
        </activity>
    </application>

</manifest>
